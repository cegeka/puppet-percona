[mysqld]
pxc-encrypt-cluster-traffic=ON
<% if @ssl_autogen == false %>
ssl-ca=<%= @ssl_ca %>
ssl-key=<%= @ssl_key %>
ssl-cert=<%= @ssl_cert %>
<% end %>

[client]
<% if !@ssl_ca_client.empty? %>
ssl-ca=<%= @ssl_ca_client %>
<% elsif @ssl_autogen == false %>
ssl-ca=<%= @ssl_ca %>
ssl-key=<%= @ssl_key %>
ssl-cert=<%= @ssl_cert %>
<% end %>

[sst]
encrypt=4
<%- if @ssl_autogen == false -%>
ssl-ca=<%= @ssl_ca %>
ssl-key=<%= @ssl_key %>
ssl-cert=<%= @ssl_cert %>
<%- end -%>
